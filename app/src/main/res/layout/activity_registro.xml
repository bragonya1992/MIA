<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.usac.brayan.mensajeriaarquitectura.Registro">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:title="Registro de alumnos y catedraticos"
            />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="23dp"
                android:text="Codigo (CUI)"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCodigo"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:hint="Introduzca su CUI"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="23dp"
                android:text="Nombre"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtNombre"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:hint="Introduzca su nombre"
                android:imeOptions="actionNext"
                android:singleLine="true"/>


            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="23dp"
                android:text="Contrase単a"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtPassword"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:hint="Introduzca su contrase単a"
                android:imeOptions="actionNext"
                android:singleLine="true"/>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="23dp"
                android:text="Confirme contrase単a"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtPasswordConfirm"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:hint="Introduzca su contrase単a"
                android:imeOptions="actionNext"
                android:singleLine="true"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="23dp"
                android:textColor="#ee4444"
                android:text="Elija su categoria (Maestro o alumno)"/>
            <Spinner
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:textAlignment="center"
                android:entries="@array/roles"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:id="@+id/btnRegistrar"
                android:layout_marginTop="65dp"
                android:onClick="registrar"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
