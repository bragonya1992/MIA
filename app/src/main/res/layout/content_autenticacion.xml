<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.usac.brayan.mensajeriaarquitectura.Autenticacion"
    tools:showIn="@layout/activity_autenticacion"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"
        android:layout_marginTop="65dp"
        android:onClick="onClick"
        android:layout_gravity="bottom"
        android:layout_x="135dp"
        android:layout_y="380dp" />

    <EditText
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCarne"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_vertical"
        android:layout_x="30dp"
        android:layout_y="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carne"
        android:id="@+id/msgCarne"
        android:layout_x="145dp"
        android:layout_y="30dp" />
    <EditText
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPass"
        android:layout_centerVertical="true"
        android:inputType="textPassword"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_vertical"
        android:layout_x="30dp"
        android:layout_y="220dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/msgPassword"
        android:layout_x="128dp"
        android:layout_y="180dp" />

    <Spinner
        android:layout_width="107dp"
        android:layout_height="34dp"
        android:id="@+id/spinner"
        android:layout_x="131dp"
        android:entries="@array/country_arrays"
        android:layout_y="325dp" />


</AbsoluteLayout>
