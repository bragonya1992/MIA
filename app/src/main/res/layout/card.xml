<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:background="@color/white"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del curso"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/title_text"
                android:id="@+id/nombreCursoCard"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CatedrÃ¡tico"
                android:textColor="@color/normal_text"
                android:textSize="14sp"
                android:id="@+id/catedraticoCard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seccion"
                android:layout_marginTop="8dp"
                android:textColor="@color/title_text"
                android:textSize="14sp"
                android:id="@+id/seccionCard" />

            <Button
                android:layout_gravity="right"
                android:text="ASIGNAR CURSO"
                android:padding="0dp"
                android:textColor="@color/asignar"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:id="@+id/button_asignacion"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>