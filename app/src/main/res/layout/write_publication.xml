<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corners">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo de tu publicacion (Opcional)"
            android:id="@+id/title_publication"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe aqui tu publicacion"
            android:id="@+id/content_publication"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/chkAlumnos"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumnos"
                android:layout_marginRight="25dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/chkMaestros"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maestros"
                android:layout_marginRight="25dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_send_white_24dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:id="@+id/sendPublication"
                android:onClick="sendToServerPublication"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>